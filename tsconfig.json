{
  "compilerOptions": {
    "target": "esnext", // Make sure to compile using latest ecmascript features
    "module": "esnext", // Make sure to compile using latest ecmascript features
    "strict": true,
    "jsx": "react-jsx", //
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["vite/client"],
    "paths": {
      "/@/*": ["src/*"]
    },
    "lib": ["esnext", "dom"], //Make sure to include 'dom' since we're working with React. Ensure it's included in dist
    "declaration": true // Set to generate .d.ts files. You'll need these to include type definitions in your package
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
